@model Tro

<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css"/>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css"/>
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  <link rel="stylesheet" href="~/css/slide.css" asp-append-version="true">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> *@
   
</head>
<body>

<!-- Nội dung slide -->
<div class="top">
  <div class="left">
    <div class="chitiet-img">
                <img src="@Url.Action("GetImage", "Home", new { id = @Model.Id })" alt="Ảnh" />
    </div>

    <div class="noidung">
      <div class="diachi">
        <h1>Nhà trọ sạch sẽ - hệ thống phòng trọ gần khu đông đúc</h1>
        <p>@Model.diachi</p>

      </div>
      <div class="b">
        <div class="gia-tien">
          <h1>Mức giá</h1>
          <p>@Model.giatien đ/tháng</p>
        </div>
        <div class="dien-tich">
          <h1>Diện tích</h1>
          <p>@Model.dientich m²</p>
        </div>
      </div>
      <div class="lienhe">
        <h1>Thông tin liên hệ</h1>
        <p><strong>Số Điện Thoại:</strong> @Model.sdt <a href="tel:123-456-7890"><i class="fas fa-phone"></i></a></p>
      </div>

      <div class="mota">
        <h1>Thông tin mô tả</h1>
        <p>@Model.mota
        </p>
      </div>
      <div class="bando">
        <h1>Xem trên bản đồ</h1>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d18615.110705339644!2d105.75354946253275!3d20.9800544023341!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31345331fe07e635%3A0xf83ecc713b1a11f6!2zVuG6oW4gUGjDumMsIEjDoCDEkMO0bmcsIEjDoCBO4buZaSwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1699373451279!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>

    </div>
  </div>
  <div class="right">
    <a href="">
      <img src="~/img/P_D8.jpg" alt="anh">
    </a>
    <div class="ava">
      <p>Được đăng bởi</p>
      <span>Đức</span>
    </div>
    <div class="zalo">
      <a href="">
        <img src="~/img/icon_zalo.png" alt="zalo">
      </a>
      <p>Chat qua zalo</p>
    </div>
    <div class="email">
      <a href="">
        <p>Gửi email</p>
      </a>
    </div>
    <div class="yc">
      <a href="">
        <p>Yêu cầu liên hệ lại</p>
      </a>
    </div>
  </div>
</div>


<script>
  $(document).ready(function(){
    var slider = $('.slider').slick();

    $('.prev').click(function() {
      slider.slick('slickPrev');
    });

    $('.next').click(function() {
      slider.slick('slickNext');
    });
  });
</script>

</body>
</html>
