@{

    Layout = null;
}
@model testt.Models.User
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link rel="stylesheet" href="~/css/dangky.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/dangky.js"></script>
</head>

<body>
    <div class="container">
        <h2>Đăng ký</h2>
        <a href="/Home/index" class="back">
            <div>
                <span>&times;</span>
            </div>
        </a>
        @using (Html.BeginForm("dangky", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label for="name">Họ và Tên:</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @value = "" })
                @Html.ValidationMessageFor(model => model.Name)
                <div class="error-message" id="name-error"></div>
            </div>

            <div class="form-group">
                <label for="username">Tài khoản:</label>
                @Html.TextBoxFor(model => model.UserName, new { @id = "username",@class = "form-control", @value = "" })
                @Html.ValidationMessageFor(model => model.UserName)
                <div class="error-message" id="username-error"></div>
            </div>

            <div class="form-group">
                <label for="password">Mật khẩu:</label>
                @Html.PasswordFor(model => model.PassWord, new { @class = "form-control", value = "" })
                @Html.ValidationMessageFor(model => model.PassWord)
                <div class="error-message" id="password-error"></div>
            </div>

            <div class="form-group">
                <label for="phone">Số điện thoại:</label>
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @value = "" })
                @Html.ValidationMessageFor(model => model.Phone)
                <div class="error-message" id="phone-error"></div>
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @value = "" })
                @Html.ValidationMessageFor(model => model.Email)
                <div class="error-message" id="email-error"></div>
            </div>

            <div class="form-group">
                <button type="submit">Đăng ký</button>
            </div>
        }

    </div>
    <div id="myModal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span>
          <p id="success-message">Đăng ký thành công!</p>
        </div>
    </div>
</body>

</html>
